.giveTelPage {
  background: #F8F8F8;
  width: 100%;
  min-height: 100vh;
  overflow: hidden;
}
.giveTelPage .wrap {
  background: #fff;
  margin-top: 20rpx;
}
.giveTelPage .wrap .item {
  height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #eee;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.giveTelPage .wrap .item:nth-last-child(1) {
  border-bottom: none;
}
.giveTelPage .wrap .item .txt {
  font-size: 30rpx;
  color: #343434;
  line-height: 100rpx;
}
.giveTelPage .wrap .item input {
  text-align: right;
  font-size: 30rpx;
  color: #343434;
  vertical-align: middle;
  height: 100rpx;
  line-height: 100rpx;
}
.btnBox {
  width: 100%;
  margin: 0 auto;
  position: fixed;
  bottom: 132rpx;
}
.btnBox .btn {
  width: 570rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #4FC65C;
  border-radius: 20rpx;
  font-size: 30rpx;
  color: #FFFFFF;
  text-align: center;
}

